<Window x:Class="WPF_Balances_Zion.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Balances_Zion"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Grid>
        <DockPanel>
            <Menu x:Name="menu" Height="20" VerticalAlignment="Top" DockPanel.Dock="Top">
                <MenuItem Header="File">
                    <MenuItem Header="Open" x:Name="miOpen" Click="miOpen_Click"/>
                    <Separator/>
                </MenuItem>
            </Menu>
            <ListView DockPanel.Dock="Bottom" x:Name="lstvDB" ItemsSource="{Binding}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn DisplayMemberBinding="{Binding Path=Name}" Header="Наименование товара" Width="500" />
                        <GridViewColumn DisplayMemberBinding="{Binding Path=Count}" Header="На складе" />
                        <GridViewColumn DisplayMemberBinding="{Binding Path=Current}" Header="Фактически" />
                    </GridView>
                </ListView.View>
            </ListView>
            
        </DockPanel>
    </Grid>
</Window>
